<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginFrags.LoginFragment"
    android:background="@color/loginBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/uparty_img"
            android:layout_width="@dimen/logowidth"
            android:layout_height="@dimen/logoheight"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:src="@drawable/uparty"/>
        <EditText
            android:id="@+id/email_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uparty_img"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/loginBackground"
            android:hint="Email"
            android:textColorHint="#8E8E8E"
            android:textColor="#000000"
            android:textSize="20sp"
            android:shadowColor="@color/colorPrimary"
            />
        <View
            android:id="@+id/email_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/email_edit"
            android:layout_alignLeft="@id/email_edit"
            android:layout_alignRight="@id/email_edit"
            android:background="@color/colorPrimary"/>
        <EditText
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_line"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/loginBackground"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#8E8E8E"
            android:textColor="#000000"
            android:textSize="20sp"
            android:shadowColor="@color/colorPrimary" />
        <View
            android:id="@+id/password_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/password_edit"
            android:layout_alignLeft="@id/email_edit"
            android:layout_alignRight="@id/email_edit"
            android:background="@color/colorPrimary"/>
        <TextView
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_edit"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="14sp"
            android:text="Forgot password?"/>
        <TextView
            android:id="@+id/login_button"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_below="@id/reset"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimary"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="20sp"/>
    </RelativeLayout>


</FrameLayout>