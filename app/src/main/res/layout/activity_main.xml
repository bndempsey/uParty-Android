<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="4">
        <RelativeLayout
            android:id="@+id/explore_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/explore_img"
                android:layout_width="@dimen/tabimgdim"
                android:layout_height="@dimen/tabimgdim"
                android:layout_centerInParent="true"
                android:src="@drawable/search"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/chat_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/chat_img"
                android:layout_width="@dimen/tabimgdim"
                android:layout_height="@dimen/tabimgdim"
                android:layout_centerInParent="true"
                android:src="@drawable/chat"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/map_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/map_img"
                android:layout_width="@dimen/tabimgdim"
                android:layout_height="@dimen/tabimgdim"
                android:layout_centerInParent="true"
                android:src="@drawable/map"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/settings_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/settings_img"
                android:layout_width="@dimen/tabimgdim"
                android:layout_height="@dimen/tabimgdim"
                android:layout_centerInParent="true"
                android:src="@drawable/settings"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="uParty"
            android:textColor="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:textSize="22sp"/>
        <ImageView
            android:id="@+id/create_event"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/create_event"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <com.ggi.uparty.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_bar"
        android:layout_below="@id/toolbar"/>
    <FrameLayout
        android:id="@+id/fullscreen_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"/>


</RelativeLayout>