<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".create.CreateEventTwoFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="What is happening at the event?"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/event_create_entry"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_below="@id/prompt"
            android:layout_marginTop="75dp"
            android:layout_centerHorizontal="true"
            android:hint="Describe what is happening..."
            android:gravity="top"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:background="@drawable/rounded_corners_blue" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/event_create_entry"
            android:layout_marginTop="50dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/create_cancel"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/no"/>
            <ImageView
                android:id="@+id/create_confirm"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/yes"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>